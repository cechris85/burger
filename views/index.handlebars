<div class="title"><h1>Eat Da Burger</h1></div>

<div class="container">
  <div class="row">
    <div class="col">
<h2 class="h2">burgers that have been eaten!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>


<div class="col">
<h3 class="h2">burgers that are ready to eat!</h3>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
</div>

<div class="container foot">

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">burger_name:</label>
    <input type="text" id="ca" burger_name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">EATEN OR EAT?</label><br>
    <input type="radio" burger_name="devoured" value="1" checked> READY TO EAT!<br>
    <input type="radio" burger_name="devoured" value="0"> HAVE BEEN EATEN
  </div>

  <button class="btn btn-success" type="submit">Add burger</button>

</form>
</div>
